{% extends 'base.html.twig' %}


{% block title %}insert document{% endblock %}

{% block body %}
 <h1>upload d'un document</h1>

<form action="/uploadDocument" method="POST">
  <fieldset>
    <legend>Formulaire d'upload de Document</legend>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Nom</label>
      <input type="text" name="nom" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nom du document">
    </div>
    
	<div class="custom-control custom-switch">
      <input type="checkbox" class="custom-control-input" id="customSwitch1" checked="" name="choix">
      <label class="custom-control-label" for="customSwitch1">Actif</label>
    </div>
	<div class="form-group">
      <label for="exampleInputPassword1" class="form-label mt-4">Utilisateurs</label>
      <select name="user"class="form-control">
	  {% for item in Utilisateur %}
		<option value={{item.id}}> {{ item.login }}</option>
		{% endfor %}
	  </select>
    </div>
	<button type="submit" class="btn btn-primary">Envoyer</button>
</form>
{% endblock %}